{
  "compilerOptions": {
    "sourceMap": true,
    "outDir": "./build",
    "strict": true,
    "lib": ["esnext"],
    "esModuleInterop": true,
    "baseUrl": "./src",
    "paths": {
      "~/*": ["*"]
    },
    "moduleResolution": "Node"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
